<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/radius_background_control_buttons">
<TextView
    android:id="@+id/play_track_item_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/textColor"
    android:text="@string/chapter"
    android:gravity="center"
    android:padding="10dp"
    android:textSize="20sp"/>
    <LinearLayout
        android:id="@+id/play_track_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleY="1.2"
            android:scaleX="1.2"
            android:src="@drawable/baseline_play_circle_outline_24"/>
        <TextView
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:text="Воспроизвести"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/play_track_move"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleY="1.2"
            android:scaleX="1.2"
            android:src="@drawable/baseline_collections_bookmark_24"/>
        <TextView
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:text="Переместить"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/play_track_remove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleY="1.2"
            android:scaleX="1.2"
            android:src="@drawable/baseline_remove_circle_outline_24"/>
        <TextView
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:text="Удалить"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/play_track_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleY="1.2"
            android:scaleX="1.2"
            android:src="@drawable/baseline_cancel_24"/>
        <TextView
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:text="Отмена"
            android:textSize="20sp"/>
    </LinearLayout>
</LinearLayout>
