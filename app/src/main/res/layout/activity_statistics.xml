<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    tools:context=".activities.ActivityStatistics">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <include layout="@layout/toolbar_statistics" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="30dp"
                android:paddingTop="15dp"
                android:text="@string/activity_statistics_all_time"
                android:textColor="@color/textColor"
                android:textSize="20sp"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="0.4"
                    android:background="@drawable/radius_item_statistics"
                    android:gravity="center_vertical"
                    android:minHeight="100dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:cardCornerRadius="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:text="@string/activity_statistics_green"
                        android:textColor="@android:color/holo_green_dark"
                        android:textSize="17sp"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:text="1 days"
                        android:textColor="@color/textColor"
                        android:textSize="17sp"
                        tools:ignore="MissingConstraints" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="0.4"
                    android:background="@drawable/radius_item_statistics"
                    android:gravity="center_vertical"
                    android:minHeight="100dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:cardCornerRadius="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:text="@string/activity_statistics_red"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="17sp"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:text="1 days"
                        android:textColor="@color/textColor"
                        android:textSize="17sp"
                        tools:ignore="MissingConstraints" />
                </LinearLayout>
            </LinearLayout>

            <!-- ============================ Today ============================-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="0.4"
                    android:background="@drawable/radius_item_statistics"
                    android:gravity="center_vertical"
                    android:minHeight="100dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:cardCornerRadius="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:text="@string/activity_statistics_purple"
                        android:textColor="@android:color/holo_purple"
                        android:textSize="15sp"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:text="1 days"
                        android:textColor="@color/textColor"
                        android:textSize="17sp"
                        tools:ignore="MissingConstraints" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="0.4"
                    android:background="@drawable/radius_item_statistics"
                    android:gravity="center_vertical"
                    android:minHeight="100dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:cardCornerRadius="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:text="@string/activity_statistics_orange"
                        android:textColor="@android:color/holo_orange_dark"
                        android:textSize="15sp"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:text="1 days"
                        android:textColor="@color/textColor"
                        android:textSize="17sp"
                        tools:ignore="MissingConstraints" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:text="Сегодня"
                android:textColor="@color/textColor"
                android:textSize="20sp"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/radius_item_statistics"
                android:gravity="center_vertical"
                android:minHeight="100dp"
                android:orientation="vertical"
                android:padding="10dp"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_weight="0.6"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/radius_item_statistics"
                            android:text="@string/activity_statistics_overhead"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="17sp"
                            tools:ignore="MissingConstraints" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:background="@android:color/transparent"
                                android:text="5m 00s"
                                android:textColor="@color/textColor"
                                android:textSize="17sp"
                                tools:ignore="MissingConstraints" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:background="@android:color/transparent"
                                android:gravity="end"
                                android:text="-100%"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="17sp"
                                tools:ignore="MissingConstraints" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/cardview_dark_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/radius_item_statistics"
                            android:text="@string/activity_statistics_session"
                            android:textColor="@android:color/holo_blue_light"
                            android:textSize="17sp"
                            tools:ignore="MissingConstraints" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:background="@android:color/transparent"
                                android:text="0"
                                android:textColor="@color/textColor"
                                android:textSize="17sp"
                                tools:ignore="MissingConstraints" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:background="@android:color/transparent"
                                android:gravity="end"
                                android:text="-100%"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="17sp"
                                tools:ignore="MissingConstraints" />
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="0.4">

                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:max="100"
                            android:progress="45"
                            android:progressDrawable="@drawable/statistics_small_ring" />

                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:max="100"
                            android:progress="85"
                            android:progressDrawable="@drawable/statistics_ring" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- ============================ Last seven days ============================-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:text="Последние 7 дней"
                android:textColor="@color/textColor"
                android:textSize="20sp"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/radius_item_statistics"
                android:gravity="center_vertical"
                android:minHeight="100dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"

                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/radius_item_statistics"
                                android:text="@string/activity_statistics_overhead"
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="17sp"
                                tools:ignore="MissingConstraints" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:background="@android:color/transparent"
                                android:text="5m 00s"
                                android:textColor="@color/textColor"

                                android:textSize="17sp"
                                tools:ignore="MissingConstraints" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:background="@android:color/transparent"
                                android:gravity="end"
                                android:text="+100%"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="17sp"
                                tools:ignore="MissingConstraints" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6"
                            android:orientation="horizontal">

                            <ProgressBar
                                android:id="@+id/active_line1"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="0.1"
                                android:max="100"
                                android:progress="90"
                                android:progressDrawable="@drawable/verticalprogressbar" />

                            <ProgressBar
                                android:id="@+id/active_line2"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="0.1"
                                android:max="100"
                                android:progress="75"
                                android:progressDrawable="@drawable/verticalprogressbar" />

                            <ProgressBar
                                android:id="@+id/active_line3"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="0.1"
                                android:max="100"
                                android:progress="95"
                                android:progressDrawable="@drawable/verticalprogressbar" />

                            <ProgressBar
                                android:id="@+id/active_line4"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="0.1"
                                android:max="100"
                                android:progress="35"
                                android:progressDrawable="@drawable/verticalprogressbar" />

                            <ProgressBar
                                android:id="@+id/active_line5"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="0.1"
                                android:max="100"
                                android:progress="65"
                                android:progressDrawable="@drawable/verticalprogressbar" />

                            <ProgressBar
                                android:id="@+id/active_line6"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="0.1"
                                android:max="100"
                                android:progress="25"
                                android:progressDrawable="@drawable/verticalprogressbar" />

                            <ProgressBar
                                android:id="@+id/active_line7"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="0.1"
                                android:max="100"
                                android:progress="75"
                                android:progressDrawable="@drawable/verticalprogressbar" />
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/cardview_dark_background" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/radius_item_statistics"
                                android:text="@string/activity_statistics_session"
                                android:textColor="@android:color/holo_blue_light"
                                android:textSize="17sp"
                                tools:ignore="MissingConstraints" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:background="@android:color/transparent"
                                android:text="3"
                                android:textColor="@color/textColor"

                                android:textSize="17sp"
                                tools:ignore="MissingConstraints" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:background="@android:color/transparent"
                                android:gravity="end"
                                android:text="+100%"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="17sp"
                                tools:ignore="MissingConstraints" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <ProgressBar
                                android:id="@+id/active_blue_line1"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="0.1"
                                android:max="100"
                                android:progress="90"
                                android:progressDrawable="@drawable/verticalprogressbar_blue" />

                            <ProgressBar
                                android:id="@+id/active_blue_line2"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="0.1"
                                android:max="100"
                                android:progress="75"
                                android:progressDrawable="@drawable/verticalprogressbar_blue" />

                            <ProgressBar
                                android:id="@+id/active_blue_line3"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="0.1"
                                android:max="100"
                                android:progress="95"
                                android:progressDrawable="@drawable/verticalprogressbar_blue" />

                            <ProgressBar
                                android:id="@+id/active_blue_line4"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="0.1"
                                android:max="100"
                                android:progress="35"
                                android:progressDrawable="@drawable/verticalprogressbar_blue" />

                            <ProgressBar
                                android:id="@+id/active_blue_line5"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="0.1"
                                android:max="100"
                                android:progress="65"
                                android:progressDrawable="@drawable/verticalprogressbar_blue" />

                            <ProgressBar
                                android:id="@+id/active_blue_line6"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="0.1"
                                android:max="100"
                                android:progress="25"
                                android:progressDrawable="@drawable/verticalprogressbar_blue" />

                            <ProgressBar
                                android:id="@+id/active_blue_line7"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:layout_weight="0.1"
                                android:max="100"
                                android:progress="75"
                                android:progressDrawable="@drawable/verticalprogressbar_blue" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:text="Последние 30 дней"
                android:textColor="@color/textColor"
                android:textSize="20sp"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/radius_item_statistics"
                android:gravity="center_vertical"
                android:minHeight="100dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"

                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/radius_item_statistics"
                                android:text="@string/activity_statistics_overhead"
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="17sp"
                                tools:ignore="MissingConstraints" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:background="@android:color/transparent"
                                android:text="5m 00s"
                                android:textColor="@color/textColor"

                                android:textSize="17sp"
                                tools:ignore="MissingConstraints" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:background="@android:color/transparent"
                                android:gravity="end"
                                android:text="+100%"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="17sp"
                                tools:ignore="MissingConstraints" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/progressBarsContainerRed"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:orientation="horizontal">

                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/cardview_dark_background" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/radius_item_statistics"
                                android:text="@string/activity_statistics_session"
                                android:textColor="@android:color/holo_blue_light"
                                android:textSize="17sp"
                                tools:ignore="MissingConstraints" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:background="@android:color/transparent"
                                android:text="3"
                                android:textColor="@color/textColor"

                                android:textSize="17sp"
                                tools:ignore="MissingConstraints" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
