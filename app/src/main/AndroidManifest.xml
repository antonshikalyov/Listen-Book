            android:exported="false"
            android:screenOrientation="sensor"/>
        <activity
            android:name=".activities.ActivitySettings"
            android:exported="false"
            android:screenOrientation="sensor"/>
        <activity
            android:name=".activities.ActivityBookSettings"
            android:exported="false"
            android:screenOrientation="sensor"/>
        <activity android:name=".activities.MainActivity"
            android:exported="false"
            android:screenOrientation="sensor"/>

