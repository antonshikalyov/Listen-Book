<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.listenbook"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="29"
        android:targetSdkVersion="34" />

    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <queries>

        <!-- Required for querying the IME service at runtime -->
        <intent>
            <action android:name="android.view.InputMethod" />
        </intent>
        <!-- Required for querying the plugin at runtime -->
        <provider
            android:name="com.android.car.ui.plugin.PluginNameProvider"
            android:authorities="com.android.car.ui.plugin" />
    </queries>

    <permission
        android:name="com.example.listenbook.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.example.listenbook.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/launch_icon"
        android:label="@string/app_name"
        android:localeConfig="@xml/locale_config"
        android:roundIcon="@drawable/launch_icon"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        <activity
            android:name="com.example.listenbook.MainActivity"
            android:exported="true"
            android:screenOrientation="sensor"
            android:theme="@style/AppTheme"
            android:windowBackground="@color/background_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.listenbook.ActivityBooks"
            android:exported="false"
            android:screenOrientation="sensor" />
        <activity
            android:name="com.example.listenbook.ActivityBookmarks"
            android:exported="false"
            android:screenOrientation="sensor" />
        <activity
            android:name="com.example.listenbook.ActivityHistory"
            android:exported="false"
            android:screenOrientation="sensor" />
        <activity
            android:name="com.example.listenbook.ActivityStatistics"
            android:exported="false"
            android:screenOrientation="sensor" />
        <activity
            android:name="com.example.listenbook.ActivitySettings"
            android:exported="false"
            android:screenOrientation="sensor" />

        <provider
            android:name="com.android.car.ui.core.CarUiInstaller"
            android:authorities="com.example.listenbook.CarUiInstaller"
            android:directBootAware="true"
            android:exported="false"
            android:process="@string/car_ui_installer_process_name" />
        <provider
            android:name="com.android.car.ui.core.SearchResultsProvider"
            android:authorities="com.example.listenbook.SearchResultsProvider"
            android:exported="true"
            android:process="@string/car_ui_installer_process_name"
            android:readPermission="com.android.car.ui.READ_SEARCH_RESULTS" />
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.listenbook.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>
    </application>

</manifest>